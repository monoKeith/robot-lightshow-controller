<Pane prefHeight="335.0" prefWidth="225.0" style="-fx-background-color: linear-gradient(to bottom right, #ff7f50, #6a5acd); -fx-background-insets: 2; -fx-border-radius: 5; -fx-border-color: #941fab; -fx-border-width: 2;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.keith.bot_control.view.GlobalControlView">
   <children>
      <GridPane alignment="CENTER" hgap="5.0" prefHeight="230.0" prefWidth="225.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="161.5" minWidth="10.0" prefWidth="111.5" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="107.5" minWidth="10.0" prefWidth="88.5" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Global Options" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <Label text="# Bots Connected" textFill="WHITE" GridPane.rowIndex="1">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
            <Label fx:id="connectedBotsCount" alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="95.0" text="Unknown" textAlignment="RIGHT" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label text="Current Frame" textFill="WHITE" GridPane.rowIndex="2">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
            <Label fx:id="currentFrameName" alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="110.0" text="Unknown" textAlignment="RIGHT" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
         </children>
         <opaqueInsets>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </GridPane>
      <HBox alignment="CENTER" layoutY="290.0" prefHeight="40.0" prefWidth="225.0" spacing="10.0">
         <children>
            <Button fx:id="previewButton" mnemonicParsing="false" onAction="#onPreviewButtonClick" prefWidth="80.0" style="-fx-background-color: #920be6; -fx-background-insets: 2; -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 5;" text="Preview" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
          <Button fx:id="playButton" mnemonicParsing="false" onAction="#onPlayButtonClick" prefWidth="80.0" style="-fx-background-color: #428a3f; -fx-background-insets: 2; -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 5;" text="Play" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
         </children>
      </HBox>
   </children>
